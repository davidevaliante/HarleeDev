<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="lite.sudo.harlee.harlequin.com.harleedev.MyPicker">

    <Button

        android:layout_below="@+id/longValue"
        android:text="PlacePicker"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/pickerone"/>

    <TextView
        android:padding="8dp"
        android:text="TextView"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/latValue"/>

    <TextView
        android:padding="8dp"
        android:textSize="26sp"
        android:layout_below="@id/latValue"
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longValue"/>
</RelativeLayout>
